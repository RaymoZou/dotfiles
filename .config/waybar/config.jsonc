{
    "layer": "top",
    "modules-left": [
        "hyprland/workspaces",
        "hyprland/mode"
    ],
    "modules-center": [
        "hyprland/window"
    ],
    "modules-right": [
        "battery",
        "clock",
        "network",
        "wireplumber",
        "backlight",
        "bluetooth",
        "memory"
    ],
    // modules
    "hyprland/window": {
        "max-length": 50
    },
    "memory": {
        "format": " {used} / {total} GiB",
    },
    "backlight": {
        "format": "{icon} {percent}",
        "format-icons": [
            "󰃞",
            "󰃝",
            "󰃟",
            "󰃠"
        ]
    },
    "network": {
        "format": "<span>󰤨</span> {essid}",
        "format-disconnected": "<span>󱘖</span> disconnected",
        "max-length": 15
    },
    "battery": {
        "format": "{icon} {capacity}%",
        "format-icons": [
            "",
            "",
            "",
            "",
            ""
        ]
    },
    "clock": {
        "format": " {:%I:%M %p}",
        "format-alt": "{:%a, %d. %b  %H:%M}"
    },
    "wireplumber": {
        "format": "{icon} {volume}%",
        "format-icons": [
            "",
            "",
            ""
        ],
        "format-muted": "",
        "max-volume": 150,
        "scroll-step": 0.2
    },
    "bluetooth": {
        "format": " {status}",
        "format-connected": " {device_alias}",
    }
}
